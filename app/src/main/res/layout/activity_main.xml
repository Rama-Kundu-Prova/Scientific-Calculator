                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:background="#F3704F32"
                            android:text="√"
                            android:textColor="@color/white"
                            android:textSize="30dp"/>

            <Button
                android:id="@+id/btnXRoot"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:background="#F3704F32"
                android:text="³√"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
