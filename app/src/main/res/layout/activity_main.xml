                            android:layout_height="70dp"
                            android:id="@+id/btnSin"
                            android:background="#F3704F32"
                            android:text="sin"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>



                        <Button
                            android:id="@+id/btnCos"
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:background="#F3704F32"
                            android:text="cos"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>

                        <Button
